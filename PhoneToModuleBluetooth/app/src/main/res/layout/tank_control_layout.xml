<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- left track forward button -->
    <Button
        android:id="@+id/left_track_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/left_track_forward"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"/>

    <!-- left track backwards button -->
    <Button
        android:id="@+id/left_track_backwards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/left_track_backwards"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/left_track_forward"
        tools:ignore="MissingConstraints"/>

    <!-- left track stop button -->
    <Button
        android:id="@+id/left_track_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/left_track_stop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/left_track_backwards"
        tools:ignore="MissingConstraints" />

    <!-- right track forward button -->
    <Button
        android:id="@+id/right_track_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/right_track_forward"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/left_track_stop"
        tools:ignore="MissingConstraints" />

    <!-- right track backward button -->
    <Button
        android:id="@+id/right_track_backwards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/right_track_backwards"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/right_track_forward"
        tools:ignore="MissingConstraints" />

    <!-- right track stop button -->
    <Button
        android:id="@+id/right_track_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/right_track_stop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/right_track_backwards"
        tools:ignore="MissingConstraints" />


    <!-- disconnect button -->
    <Button
        android:id="@+id/close_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disconnect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/right_track_stop"/>

</androidx.constraintlayout.widget.ConstraintLayout>